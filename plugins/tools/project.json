{
    "name": "nxp-tools",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "plugins/tools/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/plugins/tools",
                "main": "plugins/tools/src/index.ts",
                "tsConfig": "plugins/tools/tsconfig.lib.json",
                "assets": [
                    "plugins/tools/*.md",
                    {
                        "input": "./plugins/tools/src",
                        "glob": "**/!(*.ts)",
                        "output": "./src"
                    },
                    {
                        "input": "./plugins/tools/src",
                        "glob": "**/*.d.ts",
                        "output": "./src"
                    },
                    {
                        "input": "./plugins/tools",
                        "glob": "generators.json",
                        "output": "."
                    },
                    {
                        "input": "./plugins/tools",
                        "glob": "executors.json",
                        "output": "."
                    }
                ]
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs nxp-tools {args.ver} {args.tag}",
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"]
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "plugins/tools/jest.config.ts"
            }
        }
    },
    "tags": []
}
